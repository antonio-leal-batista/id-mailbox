          "type": "string",
          "enum": ["create", "recover", "update", "delete"],
          "example": "create"
        },
        "kid": {
          "type": "string",
          "example": "#key1"
        },
        "alg": {
          "type": "string",
          "enum": ["ES256K"],
          "example": "ES256K"
        },
        "proofOfWork": {
          "type": "string",
          "example": ""
        }
      }
    },
